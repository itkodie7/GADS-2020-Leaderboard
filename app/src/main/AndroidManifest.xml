<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itkodie7.gadsleaderboard">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.itkodie7.gadsleaderboard.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.itkodie7.gadsleaderboard.LeaderboardActivity" />
        <activity
            android:name="com.itkodie7.gadsleaderboard.Verification"
            android:theme="@style/AppTheme.TransLucentTheme" />
        <activity
            android:name="com.itkodie7.gadsleaderboard.SubmissionFailure"
            android:theme="@style/AppTheme.TransLucentTheme" />
        <activity
            android:name="com.itkodie7.gadsleaderboard.SubmissionSucess"
            android:theme="@style/AppTheme.TransLucentTheme" />
        <activity
            android:name="com.itkodie7.gadsleaderboard.ProjectSubmissionActivity"
            android:theme="@style/SubmitActivityTheme" />
    </application>



</manifest>